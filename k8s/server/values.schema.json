{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Values",
  "type": "object",
  "properties": {
    "container": {
      "description": "Container Image",
      "type": "object",
      "properties": {
        "image": {
          "description": "Image repository",
          "type": "string"
        },
        "tag": {
          "description": "Image tag",
          "type": "string"
        },
        "replicas": {
          "description": "The number of replicas into the cluster",
          "type": "number"
        },
        "port": {
          "description": "Container port",
          "type": "number"
        }
      }
    }
  },
  "secret": {
    "description": "Values for the secret file",
    "type": "object",
    "properties": {
      "clerkApiKey": {
        "description": "Clerk Publishable Key",
        "type": "string"
      },
      "databaseUrl": {
        "description": "Database url",
        "type": "string"
      },
      "geminiApiKey": {
        "description": "Gemini api key",
        "type": "string"
      },
      "redisHost": {
        "description": "Redis host",
        "type": "string"
      },
      "redisPassword": {
        "description": "Redis password",
        "type": "string"
      },
      "redisPort": {
        "description": "Redis port",
        "type": "number"
      },
      "redisUsername": {
        "description": "Redis username",
        "type": "string"
      }
    },
    "required": ["clerkPublishableKey"]
  },
  "config": {
    "description": "Values for the ConfigMap file",
    "type": "object",
    "properties": {
      "frontendUrl": {
        "description": "Api Url",
        "type": "string"
      }
    },
    "required": ["apiUrl"]
  },
  "name": {
    "description": "Service name",
    "type": "string"
  },
  "required": ["name"]
}
